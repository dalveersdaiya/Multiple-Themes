<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/my_text_color">


    <com.dsd.dynamictheme.FrissonView
        android:id="@+id/wave_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="60dp"
        app:alphaValue="40"
        app:tintColor="?attr/my_text_color_inverse"
        app:gradientType="linear"
        app:gradient_endColor="@color/transparent"
        app:gradient_startColor="?attr/myColorAccent"
        app:src="?attr/myColorPrimaryDark"
        app:gradientAngle="180"
        app:tideCount="3"
        app:tideHeight="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="?attr/my_text_color"
        android:id="@+id/tv_app_text"
        android:layout_above="@+id/iv_project_logo"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:layout_margin="10dp"
        android:padding="5dp"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_project_logo"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="?android:actionBarSize"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="?attr/my_text_color"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:background="@drawable/white_border"
        android:padding="60dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="?attr/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:hint="@string/app_name"
        android:textSize="12sp" />

</RelativeLayout>
